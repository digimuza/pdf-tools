{
  "name": "@digimuza/pdf-tools",
  "description": "PDF generation library & generation utilities",
  "version": "0.1.2",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin",
    "lib",
    "src",
    "tests",
    "LICENSE",
    "tsconfig.json",
    "README.md"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": false,
    "useTabs": true,
    "printWidth": 140,
    "tabWidth": 8,
    "singleQuote": true,
    "trailingComma": "es5",
    "parser": "typescript",
    "arrowParens": "always"
  },
  "bin": {
    "pdf-tools": "bin/index.js"
  },
  "keywords": [],
  "scripts": {
    "docs": "typedoc src/index.ts",
    "build": "rm -rf lib && tsc --build",
    "format": "prettier --write \"**/src/**/*.ts\"",
    "watch": "yarn link && tsc --watch",
    "test": "jest"
  },
  "author": "digimuza",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^13.13.5",
    "git-conventional-commits": "^1.2.0",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.3",
    "tslib": "^2.4.0",
    "typedoc": "^0.22.15",
    "typescript": "4.5.x"
  },
  "dependencies": {
    "@digimuza/pdf-components": "^0.0.6",
    "@types/live-server": "^1.2.1",
    "@types/node-pdftk": "^2.1.6",
    "@types/tmp": "^0.2.3",
    "argparse": "^2.0.1",
    "chokidar": "^3.5.3",
    "fs-jetpack": "^4.3.1",
    "html-pdf-node": "^1.0.8",
    "ix": "2.5.5",
    "live-server": "^1.2.2",
    "node-pdftk": "^2.1.3",
    "pdf-lib": "^1.17.1",
    "pdf-merger-js": "^3.4.0",
    "tmp": "^0.2.1",
    "ts-node": "^10.8.1",
    "ts-node-register": "^1.0.0",
    "ts-prime": "^1.0.0",
    "typedi": "^0.10.0",
    "yargs": "^17.5.1"
  }
}
